+              usleep(g_speed);
+            }
+            p_line += m_pattern[pat].rowbytes;
+            // If we get the g_halt signal then stop repeating
+            // the pattern
+            if(g_halt)
+            {
+              g_halt = 0;
+              g_repeat = 0;
+              break;
+            }
+          }
+          p_line += m_pattern[pat].rowbytes;
+        }
+        while(g_repeat);
+        g_pattern_playing = 0;
+
+        write(fd, zeroes, sizeof(zeroes)); 
+      }
+      else
+      {
+        CLog::Log(LOGDEBUG, "No img for LED pattern %d", pat);
+      }
+      close(fd);
+    }
+  }
