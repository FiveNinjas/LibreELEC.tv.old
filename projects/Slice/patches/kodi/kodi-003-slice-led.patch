+  void Run()
+  {
+    m_going = 1;
+    while(m_going)
+    {
+      m_ev->Wait();
+      CLog::Log(LOGDEBUG, "Led Pattern %d triggered", g_pattern);
+      play_pattern(g_pattern);
+    }
+  }
+
+  void Stop()
+  {
+    m_going = 0;
+    m_ev->Set();
+  }
+};
